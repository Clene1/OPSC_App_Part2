<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manual_Entry">

    <TextView
        android:id="@+id/label"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/label2"
        android:textColor="@color/purple"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/mySpinnerprgEntries"
        android:layout_width="353dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:spinnerMode="dropdown"
        android:background="@color/lightPurple"
        android:theme="@style/Base.Theme.TimeFlow_OPSC_POE_PART_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label" />

    <Button
        android:id="@+id/btnSaveprj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/buttons"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEndingTime"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtSetDate"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Select date"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelEndDate"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPhoto" />

    <TextView
        android:id="@+id/labelEndDate"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:text="Date:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTimesheet" />

    <ImageView
        android:id="@+id/imgTimesheet"
        android:layout_width="95dp"
        android:layout_height="92dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySpinnerprgEntries" />

    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"
        android:text="Add photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTimesheet"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:text="Choose photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTimesheet"
        app:layout_constraintTop_toBottomOf="@+id/mySpinnerprgEntries" />

    <TextView
        android:id="@+id/txtStaringTime"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter time"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/lblStartTime"
        app:layout_constraintTop_toBottomOf="@+id/txtSetDate" />

    <TextView
        android:id="@+id/txtEndingTime"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginTop="472dp"
        android:ems="10"
        android:hint="Enter time"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblEndingTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblStartTime"
        android:layout_width="219dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="Starting time:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEndDate" />

    <TextView
        android:id="@+id/lblEndingTime"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="Ending time:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblStartTime" />

    <EditText
        android:id="@+id/txtDesc"
        android:layout_width="367dp"
        android:layout_height="42dp"
        android:layout_marginBottom="152dp"
        android:ems="10"
        android:hint="Enter description"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>