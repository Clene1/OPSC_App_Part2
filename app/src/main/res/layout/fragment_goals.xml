<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Daily goals"
        android:textColor="@color/purple"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDailyGoal"
        android:layout_width="324dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:text="Daily goal"
        android:background="@drawable/option_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label2" />

    <TextView
        android:id="@+id/lblCurrentGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current goal"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="248dp" />

    <TextView
        android:id="@+id/currentMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/currentMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="289dp" />


</androidx.constraintlayout.widget.ConstraintLayout>